// See https://containers.dev/implementors/json_reference/ for configuration reference
{
  "name": "Brightbirds PWA",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "node",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers-contrib/features/powershell:1": {}
  },
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "dbaeumer.vscode-eslint",
        "vue.volar",
        "esbenp.prettier-vscode",
        "stylelint.vscode-stylelint",
        "usernamehw.errorlens",
        "YoavBls.pretty-ts-errors",
        "mrmlnc.vscode-scss",
        "vitest.explorer"
      ]
    }
  },
  "containerEnv": {
    // Windows should set Wndows_NT here by default.
    "HOST_OS": "${localEnv:OS}"
  },
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [53000],
  "portsAttributes": {
    "53000": {
      "protocol": "https"
    }
  },
  "postCreateCommand": "npm i; cd push-server; npm i; cd ..;",
  "postAttachCommand": "npx --yes npm-check-updates --minimal"
}
